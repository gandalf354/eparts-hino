FROM node:20 AS build

WORKDIR /app

RUN corepack enable && corepack prepare pnpm@9.12.3 --activate

COPY package.json ./
RUN pnpm install --frozen-lockfile=false

COPY tsconfig.json vite.config.ts index.html ./
COPY src ./src
COPY public ./public

# Configure API base at build time if provided
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}

RUN pnpm run build

EXPOSE 5173

CMD ["pnpm","run","preview","--","--host","0.0.0.0","--port","5173","--strictPort"]
